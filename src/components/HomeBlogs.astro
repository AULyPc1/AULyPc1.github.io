---
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import { getPostUrlBySlug } from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import HomePostItem from "./HomePostItem.astro";

const { page } = Astro.props;

let delay = 0;
const interval = 50;
---
<div class="card-base transition rounded-[var(--radius-large)]">
    <div class="flex justify-between items-center pl-6 md:pl-9 pr-6 md:pr-2 pt-6 md:pt-7 pb-4 mb-2">
    <h2 class="text-3xl font-bold text-90">
        {i18n(I18nKey.blogs)}
    </h2>
    <a href="/blog/"
        class="flex items-center gap-1.5 px-4 py-2.5 rounded-lg
            min-w-36
            text-black/75 dark:text-white/75
            bg-[var(--enter-btn-bg)]
            hover:bg-[var(--enter-btn-bg-hover)]
            hover:text-[var(--primary)]
            active:bg-[var(--enter-btn-bg-active)]
            active:scale-95
            transition-all group"
        style="margin-right:1rem;">
        <span class="text-sm">查看全部文章</span>
        <svg width="1em" height="1em" viewBox="0 0 24 24"
            class="text-xl text-[var(--primary)] transition-transform group-hover:translate-x-0.5"
            fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill="currentColor" d="M12.6 12L8.7 8.1q-.275-.275-.275-.7t.275-.7t.7-.275t.7.275l4.6 4.6q.15.15.213.325t.062.375t-.062.375t-.213.325l-4.6 4.6q-.275.275-.7.275t-.7-.275t-.275-.7t.275-.7z"/>
        </svg>
    </a>
    </div>
<div class="transition flex flex-col bg-[var(--card-bg)] py-1 md:py-0 bg-transparent md:gap-4">
    {page.map((entry: { data: { draft: boolean; title: string; tags: string[]; category: string; published: Date; image: string; description: string; }; slug: string; }) => {
        return (
            <HomePostItem
                    entry={entry}
                    title={entry.data.title}
                    tags={entry.data.tags}
                    category={entry.data.category}
                    published={entry.data.published}
                    url={getPostUrlBySlug(entry.slug)}
                    image={entry.data.image}
                    description={entry.data.description}
                    draft={entry.data.draft}
                    class:list="onload-animation"
                    style={`animation-delay: calc(var(--content-delay) + ${delay++ * interval}ms);`}
            ></HomePostItem>
        );
    })}
</div></div>